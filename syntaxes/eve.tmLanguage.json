{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Eve",
	"patterns": [
		{
			"name": "markup.heading",
			"match": "^#.+"
		},
		{
			"name": "markup.heading",
			"match": "^\\-"
		},
		{
			"name": "string.quoted",
			"match": "`[^`]*`"
		},
		{
			"include": "#block"
		}
	],
	"repository": {
		"block": {
			"name": "meta.block",
			"begin": "~~~",
			"end": "~~~",
			"patterns": [
				{
					"name": "keyword.control.eve",
					"match": "\\b(search|bind|commit|if|else|then|not)\\b"
				},
				{
					"name": "variable.other",
					"match": "#\\S+"
				},
				{
					"name": "variable.function",
					"match": "\\S+(?=\\[)"
				},
				{
					"name": "string.quoted.double.eve",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.eve",
							"match": "\\\\."
						},
						{
							"name": "keyword.control.eve",
							"begin": "{{",
							"end": "}}",
							"patterns": [
								{
									"name": "constant.numeric.integer",
									"match": "[^}]*"
								}
							]
						}
					]
				},
				{
					"name": "constant.numeric.integer",
					"match": "\\b([0-9]+)\\b"
				},				{
					"name": "constant.language",
					"match": "true|false|none"
				},
				{
					"name": "comment.line",
					"match": "//.+"
				}
			]
		}
	},
	"scopeName": "eve"
}